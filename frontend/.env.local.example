# ==============================================================================
# CineAesthete Frontend Environment Configuration
# ==============================================================================
# Copy this file to .env.local and update the values

# ------------------------------------------------------------------------------
# API Configuration
# ------------------------------------------------------------------------------
# Backend API Base URL (without /api/v1)
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# ------------------------------------------------------------------------------
# TMDb Configuration
# ------------------------------------------------------------------------------
# TMDb Image Base URL for fetching movie posters and backdrops
NEXT_PUBLIC_TMDB_IMAGE_BASE_URL=https://image.tmdb.org/t/p

# ------------------------------------------------------------------------------
# Application Configuration
# ------------------------------------------------------------------------------
# Application name displayed in UI
NEXT_PUBLIC_APP_NAME=CineAesthete

# Application base URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ------------------------------------------------------------------------------
# Feature Flags (Optional)
# ------------------------------------------------------------------------------
# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false

# ------------------------------------------------------------------------------
# Development Configuration
# ------------------------------------------------------------------------------
# Show detailed error messages in development
NEXT_PUBLIC_DEBUG_MODE=true

# Enable React Query DevTools
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# ==============================================================================
# IMPORTANT NOTES:
# - Never commit .env.local to version control
# - All NEXT_PUBLIC_* variables are exposed to the browser
# - Keep sensitive data in server-side only env vars
# ==============================================================================
